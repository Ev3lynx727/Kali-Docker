# Docker Host Environment Configuration
# Copy this file and customize for your deployment

# SSH Configuration
SSH_PORT=2222
SSH_USER=docker
SSH_AUTHORIZED_KEYS_PATH=/home/docker/.ssh/authorized_keys

# Docker Configuration
DOCKER_TLS_CERTDIR=/etc/docker/certs
DOCKER_HOST=tcp://0.0.0.0:2376
DOCKER_API_PORT=2376
DOCKER_SWARM_PORT=2377

# Firewall Configuration
FIREWALL_DEFAULT_ZONE=docker
FIREWALL_ALLOWED_PORTS=22/tcp,80/tcp,443/tcp,2376/tcp,2377/tcp

# Security Settings
ENABLE_SELINUX=true
ENABLE_AUDIT=true
DOCKER_USERNS_REMAP=default

# Monitoring Configuration
MONITOR_INTERVAL=300
LOG_RETENTION_DAYS=30
ALERT_EMAIL=admin@example.com

# Network Configuration
DOCKER_NETWORK_SUBNET=172.20.0.0/16
SECURE_NETWORK_SUBNET=172.21.0.0/16
ISOLATED_NETWORK_SUBNET=172.22.0.0/16

# Resource Limits
CONTAINER_MEMORY_LIMIT=512m
CONTAINER_CPU_LIMIT=0.5
TMPFS_SIZE=100m

WIREGUARD_SERVERURL=auto  
WIREGUARD_SERVERPORT=51820  
WIREGUARD_PEERS=1  
WIREGUARD_PEERDNS=auto  
WIREGUARD_INTERNAL_SUBNET=10.0.0.0/24  